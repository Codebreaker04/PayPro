{
  "version": 2,
  "name": "PayPro App",
  "builds": [
    {
      "src":  "index.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "api/v1/(.*)",
      "dest": "index.js",
      "methods": [
        "GET",
        "POST",
        "PUT",
        "PATCH",
        "DELETE",
        "OPTIONS"
        ]
    }
  ],

//  "rewrites": [
//    {
//      "source": "/api/v1/(.*)",
//      "destination": "/api/v1/"
//    }
//  ]
}